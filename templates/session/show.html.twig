{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h2>{{ session.name }}</h2>

        <a class = "btn btn-info" href = "{{ path('subject_create', {session: session.id}) }}">Добавить новый предмет</a>

        <h2>Предметы</h2>

        {% for subject in session.subjects %}
            <p class = "ml-4">
                <a href = "{{ path('subject_show', {subject: subject.id}) }}">
                    {{ subject.teacherLastName }} - {{ subject.name }}
                </a>
            </p>
        {% endfor %}

        <a class = "btn btn-info" href = "{{ path('home') }}">Вернуться домой</a>

        <br><br><br><br>

        <a class = "btn btn-danger" href = "{{ path('session_delete', {session: session.id}) }}">Удалить сессию</a>

    </div>
{% endblock %}
