{% extends 'base.html.twig' %}

{% block title %}Hello MeetingController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>Создать встречу</h2>
    {{ form_start(meetingForm) }}
    {{ form_row(meetingForm.dateMeeting) }}
    {{ form_row(meetingForm.timeMeeting) }}
    <button type="submit" class="btn btn-primary">Создать встречу</button>
    {{ form_end(meetingForm) }}
</div>
{% endblock %}
