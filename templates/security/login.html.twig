{% extends 'baselogreg.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main class = "main-login">
        <div class = "form-login">
            <form method="post">
                {% if app.user %}
                    <div class="mb-3">
                        Ты уже вошел как {{ app.user.username }}, <a href="{{ path('app_logout') }}">Выйти</a>
                    </div>
                {% endif %}

                <div class="title-login">
                    <h1>Вход</h1>
                    <hr>
                </div>
                {% if error %}
                    <div class="error_msg">Неверный логин или пароль</div>
                {% endif %}
                <div class = "field-login">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                </div>
                <div class = "field-login">
                    <label for="inputPassword">Пароль</label>
                    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                <button class="button-login" type="submit">
                    Вход
                </button>

                <div class="remember-me">
                    <label>
                        <input type="checkbox" name="_remember_me"> Оставаться в системе
                    </label>
                </div>

                <hr>

                <div class = "help-block">
                    <span>Нет аккаунта? </span>
                    <a href = "{{ path('app_register') }}">Регистрация</a>
                </div>
            </form>
        </div>
    </main>
{% endblock %}
